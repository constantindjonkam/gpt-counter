{
  "manifest_version": 3,
  "name": "GPT Counter Pro",
  "description": "Tracks requests to models on chatgpt.com and displays usage count in a popup.",
  "version": "1.0.0",
  "permissions": ["webRequest", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://chatgpt.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
